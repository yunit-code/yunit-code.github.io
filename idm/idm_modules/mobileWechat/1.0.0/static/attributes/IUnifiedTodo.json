{
    "classId": "idm.componet.mobilewechat.unifiedTodo",
    "comName": "统一待办",
    "className": "IUnifiedTodo",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "标题",
                    "desc": "组件标题文字",
                    "bindKey": "title",
                    "default": "待办事项"
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "desc": "设置组件点击链接跳转方式",
                    "dictionary": [
                        {
                            "label": "智能跳转打开",
                            "value": "_auto"
                        },
                        {
                            "label": "当前页跳转",
                            "value": "_self"
                        },
                        {
                            "label": "新窗口打开",
                            "value": "_blank"
                        }
                    ],
                    "default": "_auto"
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示标题",
                    "bindKey": "showTitle",
                    "default": true
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示图标",
                    "bindKey": "showIcon",
                    "desc": "配置是否显示标题图标",
                    "default": true,
                    "display": "@[showTitle == true]"
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示更多",
                    "bindKey": "showMore",
                    "default": true,
                    "display": "@[showTitle == true]"
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示角标",
                    "desc": "设置组件右上角待办数量，为false时显示省略号",
                    "bindKey": "showTodoNumber",
                    "default": false,
                    "display": "@[showTitle == true]"
                },
                {
                    "type": "slider",
                    "layoutType": "inline",
                    "text": "显示数量",
                    "bindKey": "limit",
                    "default": "3"
                }
            ]
        },
        {
            "type": "group",
            "text": "标题容器样式",
            "desc": "点击？查看样式设置用法指南",
            "display": "@[showTitle == true]",
            "helpUrl": "",
            "children": [
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "图标位置",
                    "desc": "设置组件标题图标位置",
                    "bindKey": "titleIconPosition",
                    "display": "@[showIcon == true]",
                    "dictionary": [
                        {
                            "label": "左边",
                            "value": "left"
                        },
                        {
                            "label": "右边",
                            "value": "right"
                        }
                    ],
                    "default": "right"
                },
                {
                    "type": "group",
                    "text": "标题图标",
                    "desc": "设置标题图标属性，颜色会覆盖主题色",
                    "display": "@[showTitle == true && showIcon == true]",
                    "helpUrl": "",
                    "children": [
                        {
                            "type": "iconSelect",
                            "layoutType": "inline",
                            "text": "标题图标",
                            "bindKey": "titleIconClass",
                            "default": ""
                        },
                        {
                            "type": "colorPicker",
                            "layoutType": "inline",
                            "desc": "设置图标颜色，会覆盖主题色",
                            "text": "图标颜色",
                            "bindKey": "titleIconFontColor",
                            "default": ""
                        },
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "图标大小",
                            "bindKey": "titleIconFontSize",
                            "default": 18
                        }
                    ]
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "标题字体",
                    "bindKey": "titleFontStyle",
                    "default":  {
                        "fontColors": {
                            "hex8": "#333333"
                        },
                        "fontSize": 16,
                        "fontSizeUnit": "px",
                        "fontWeight": "800"
                    },
                    "display": "@[showTitle == true]"
                }
            ]
        },
        {
            "type": "group",
            "text": "外层容器样式",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "bgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "width": "60px",
                            "default": "auto"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box",
                    "default":{
                        "marginTopVal": "2%",
                        "marginRightVal": "2%",
                        "marginBottomVal": "2%",
                        "marginLeftVal": "2%",
                        "paddingTopVal": "",
                        "paddingRightVal": "",
                        "paddingBottomVal": "",
                        "paddingLeftVal": ""
                    }
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border",
                    "default":{
                        "border": {
                            "top": {
                                "style": "solid",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {
                                    "hex8":"#000000FF"
                                }
                            },
                            "right": {
                                "style": "solid",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {
                                    "hex8":"#000000FF"
                                }
                            },
                            "bottom": {
                                "style": "solid",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {
                                    "hex8":"#000000FF"
                                }
                            },
                            "left": {
                                "style": "solid",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {
                                    "hex8":"#000000FF"
                                }
                            }
                        },
                        "radius": {
                            "leftTop": {
                                "radius": 8,
                                "radiusUnit": "px"
                            },
                            "rightTop": {
                                "radius": 8,
                                "radiusUnit": "px"
                            },
                            "leftBottom": {
                                "radius": 8,
                                "radiusUnit": "px"
                            },
                            "rightBottom": {
                                "radius": 8,
                                "radiusUnit": "px"
                            }
                        }
                    }
                }
            ]
        },
        {
            "type": "group",
            "text": "内层容器样式",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "默认字体",
                    "bindKey": "todoFontStyle",
                    "default": {
                        "fontColors": {
                            "hex": "#000000"
                        },
                        "fontSize": 15,
                        "fontSizeUnit": "px",
                        "fontWeight": "500"
                    }
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "已读字体",
                    "bindKey": "readFontStyle",
                    "default": {
                        "fontColors": {
                            "hex": "#999999"
                        },
                        "fontSize": 15,
                        "fontSizeUnit": "px",
                        "fontWeight": "500"
                    }
                },
                
                {
                    "type": "group",
                    "text": "已读图标设置",
                    "desc": "点击？查看样式设置用法指南",
                    "helpUrl": "",
                    "children": [
                        {
                            "type": "iconSelect",
                            "layoutType": "inline",
                            "text": "已读图标",
                            "bindKey": "readIcon",
                            "default": ["idm-icon-xuanze"]
                        },
                        {
                            "type": "colorPicker",
                            "layoutType": "inline",
                            "text": "图标颜色",
                            "bindKey": "readIconColor",
                            "default": ""
                        },
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "图标大小",
                            "bindKey": "readIconSize",
                            "default": 18
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "未读图标设置",
                    "desc": "点击？查看样式设置用法指南",
                    "helpUrl": "",
                    "children": [
                        {
                            "type": "iconSelect",
                            "layoutType": "inline",
                            "text": "未读图标",
                            "bindKey": "noReadIcon",
                            "default": ["idm-icon-gantanhao"]
                        },
                        {
                            "type": "colorPicker",
                            "layoutType": "inline",
                            "text": "图标颜色",
                            "bindKey": "noReadIconColor",
                            "default": ""
                        },
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "图标大小",
                            "bindKey": "noReadIconSize",
                            "default": 18
                        }
                    ]
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "空白文字",
                    "desc": "无数据时，提示文字",
                    "bindKey": "emptyText",
                    "default": "暂无数据"
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "空白高度",
                    "desc": "无数据时，显示空白数据高度，设置过小则显示不全，推荐110px",
                    "bindKey": "emptyBoxHeight",
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "%",
                            "value": "%"
                        }
                    ],
                    "default": {
                        "inputVal": 110,
                        "selectVal": "px"
                    }
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "subBgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "subWidth",
                            "width": "60px",
                            "default": "auto"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "subHeight",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "subBox",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "0",
                        "paddingRightVal": "0",
                        "paddingBottomVal": "0",
                        "paddingLeftVal": "0"
                    }
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "subBorder"
                }
            ]
        },
        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "default":[
                {
                    "key":"blue",
                    "mainColor":{
                        "hex": "#0073CA",
                        "hex8": "#0073CAFF"
                    }
                },
                {
                    "key":"red",
                    "mainColor":{
                        "hex": "#E21A1A",
                        "hex8": "#E21A1AFF"
                    }
                },
                {
                    "key":"green",
                    "mainColor":{
                        "hex": "#0EAF64",
                        "hex8": "#0EAF64FF"
                    }
                }
            ],
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "multiple": false,
                    "desc":"用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
                    "default":"",
                    "placeholder":"例如：blue",
                    "ctrlAttrObject": {
                        "mode": "combobox"
                    },
                    "dictionary": [
                        {
                            "label": "blue",
                            "value": "blue"
                        },
                        {
                            "label": "red",
                            "value": "red"
                        },
                        {
                            "label": "green",
                            "value": "green"
                        }
                    ]
                },{
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc":"主题的主要颜色",
                    "placeholder": "请选择颜色",
                    "display":"@[key]"
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "group",
                    "text": "适配设置",
                    "desc":"通过设置属性来适配移动端页面尺寸",
                    "children": [
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "基准值",
                            "desc": "此属性用于标记当前组件在显示效果最完美情况下的宽度大小（px），例如：此组件显示效果最佳宽度为414px，则此处设置为414即可，如果此组件最佳效果为当前配置的屏幕宽（px）的一半则只需要除以2即可。",
                            "bindKey": "baseSize",
                            "default": 414
                        },
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "适配比例",
                            "desc": "与基准值配合使用，如果在实际预览屏幕宽为基准值的两倍，则此组件所有可适配的内容都会基于此处设置的适配比例相对应的进行放大缩小，例如此处设置1.2，则会相对应的放大至1.2倍",
                            "bindKey": "adaptationRatio",
                            "default": 1.2
                        }
                    ]
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "已读判断",
                    "desc":"已读判断表达式,不需要根据已读变化直接为空即可，表达式结果为true则显示，false则不显示，此处填写表达式，更多详细用法点击查看",
                    "bindKey": "readExpression",
                    "placeholder":"readStatus 或者 readStatus=='1'",
                    "default": "readStatus == '1'"
                },
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "数据模式",
                    "bindKey": "dataType",
                    "desc": "设置待办数据来源",
                    "dictionary": [
                        {
                            "label": "数据源",
                            "value": "dataSource"
                        },
                        {
                            "label": "自定义",
                            "value": "custom"
                        }
                    ],
                    "default": "dataSource"
                },
                {
                    "type": "treeSelect",
                    "layoutType": "inline",
                    "text": "数据源",
                    "bindKey": "dataSource",
                    "dataSourceUrl":"/ctrl/dataSource/getDatasourceByGroup",
                    "display": "@[dataType === 'dataSource']"
                },
                {
                    "type": "input",
                    "layoutType": "block",
                    "text": "自定义数据接口",
                    "bindKey": "customGetTodoDataInterfaceUrl",
                    "default": "/ctrl/customizeTodo/getTodoPage",
                    "desc": "用于获取自定义数据源的接口地址，请按照统一标准的返回格式返回文本数据，格式如下：{\"code\":\"200\",\"data\":\"\",...}",
                    "display": "@[dataType === 'custom']"
                },
                {
                    "type": "textarea",
                    "layoutType": "inline",
                    "text": "显示字段",
                    "bindKey": "dataFiled",
                    "desc": "根据接口返回数据格式指定结果集的字段，比如结果集名为resultData（自定义接口忽略）且它的值为{data:{filedName:[{\"text\":\"\",\"value\":\"\",\"check\":true}]}}，则这里应该填写data.filedName",
                    "default": "title",
                    "placeholder": "示例：data.filedName 或者 [0].data[0].filedName"
                },
                {
                    "type": "actionSelect",
                    "layoutType": "block",
                    "text": "点击单项动作",
                    "bindKey": "clickToDoItemFunction",
                    "desc": "此设置用于点击时候执行自定义函数逻辑，如果设置了此函数则内置的根据数据跳转链接则失效",
                    "multiple": true
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "更多链接",
                    "bindKey": "moreListLink",
                    "desc": "此设置用于点击更多时候跳转链接，如果设置了链接地址则内置的根据数据跳转链接则失效",
                    "display": "@[showMore == true]"
                },{
                    "type": "select",
                    "layoutType": "inline",
                    "text": "刷新KEY",
                    "bindKey": "messageRefreshKey",
                    "desc": "根据组件接收到消息的刷新KEY来刷新数据",
                    "multiple": true,
                    "placeholder": "请选择刷新KEY",
                    "ctrlAttrObject": {
                        "mode": "tags"
                    },
                    "dictionary": [
                        {
                            "label": "inbox",
                            "value": "inbox"
                        },
                        {
                            "label": "info",
                            "value": "info"
                        }
                    ]
                }
            ]
        }
    ]
}